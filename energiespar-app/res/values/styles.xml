<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Theme -->
    <style name="CompanyTheme" parent="@android:style/Theme.Holo">
        <item name="android:textViewStyle">@style/textStyle</item>
        <item name="android:windowBackground">@drawable/background</item>
        <item name="android:imageButtonStyle">@style/Button</item>
    </style>

    <!-- Banner -->
    <style name="banner">

        <!-- Dateinamen des Banner/Logo -->
        <item name="android:src">@drawable/ic_platzhalter_logo</item>
        <!-- Orientierung des Banner/Logo -->
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- Farben -->
    <!-- Farbe des Text -->
    <color name="text">#0765af</color>

    <!-- 2 Hintergrundfarben für einen Farbverlauf -->
    <color name="background1">#82be1e</color>
    <color name="background2">#e8f3d5</color>

    <!-- 2 Buttonfarben für einen Farbverlauf -->
    <color name="button1">#f7b400</color>
    <color name="button2">#f7b400</color>

    <!-- 2 Buttonfarben für einen Farbverlauf, wenn die Buttons gedrückt werden -->
    <color name="buttonPressed1">#0765af</color>
    <color name="buttonPressed2">#0765af</color>

    <!-- Farbe des Rahmens um die Buttons, sofern rahmenstärke > 0 -->
    <color name="buttonRahmen">#0765af</color>

    <!-- Rahmenstärke bei den Buttons, 0 = kein Rahmen -->
    <dimen name="rahmenstaerke">1dp</dimen>

    <!-- Wie stark sollen die Ecken abgerundet sein? 0dp = eckig, 32dp = runde Buttons -->
    <dimen name="rundheit">32dp</dimen>

    <!-- Schrift -->
    <style name="textStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/text</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <!-- Buttons -->
    <style name="Button" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/button</item>
        <item name="android:minHeight">@dimen/raster16</item>
        <item name="android:minWidth">@dimen/raster16</item>
        <item name="android:maxHeight">@dimen/raster16</item>
        <item name="android:maxWidth">@dimen/raster16</item>
    </style>

    <style name="infoTextTitle">
        <item name="android:typeface">serif</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">#06517F</item>
    </style>

    <style name="infoTextTitle2">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#06517F</item>
    </style>
    
    <style name="infoTextSmall">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#000000</item>
    </style>
    

    <!-- Schrift unter den Buttons -->
    <style name="mainMenuButtonText" parent="@android:style/TextAppearance.Holo">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#0765af</item>
    </style>

    <!-- List Item Zählerübersicht -->
    <style name="zaehler_list_item_untertitel">
        <item name="android:textSize">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingTop">0dp</item>
    </style>

    <style name="leafRatingBar" parent="@android:style/Widget.Holo.RatingBar">
        <item name="android:progressDrawable">@drawable/leaf_rating_bar_full</item>
        <item name="android:minHeight">47dp</item>
        <item name="android:maxHeight">47dp</item>
    </style>

    <style name="lightTheme" parent="@android:style/Theme.Holo.Light"></style>

    <style name="lightTheme" parent="@android:style/Theme.Holo"></style>

</resources>