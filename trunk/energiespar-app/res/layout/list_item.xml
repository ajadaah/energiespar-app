<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/GridLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:columnCount="2"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/list_zaehlertyp_icon"
        android:layout_column="0"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        android:layout_row="0"
        android:contentDescription="meterTyp"
        android:src="@drawable/ic_type_electricity" />

    <LinearLayout
        android:id="@+id/new1"
        android:layout_column="1"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        android:layout_row="0"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/list_zaehlernummer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zählernummer"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/temp_zaehlertyp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zählertyp"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

</GridLayout>